{% set heading = 'Merge a pre-created Template with generated content..?' %}
{% extends 'templates/layout.twig' %}

{% block content %}
    <h5>Generate Word and use IO Factory to merge it with Template</h5>
    <form name="ioFactoryForm" method="post" action="/src/ioFactory/export.php">
        <div class="grid-x grid-padding-x">
            <div class="large-7 cell">
                <label><b>Content:</b></label>
                <textarea name="content" placeholder="Insert your text" rows="15"></textarea>
                <p style="position: absolute; bottom: 55px; left: 400px;font-size: 12px;">
                    only plain text allowed in this demo
                </p>
            </div>
            <div class="large-2 large-offset-2 cell">
                <label><b>Merge with this design:</b></label>
                <div class="card" style="width: 200px;">
                    <div class="card-divider">
                        Orange Design
                    </div>
                    <img src="/assets/img/ioFactoryDesign_small.png">
                </div>
            </div>
        </div>
        <input type="submit" class="button" value="Submit">
    </form>
{% endblock %}