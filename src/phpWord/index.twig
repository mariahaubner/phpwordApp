{% set heading = 'Generate a Word file with custom Text' %}
{% extends 'templates/layout.twig' %}

{% block content %}
    <h5>Generate Word</h5>
    <form name="phpWordForm" method="post" action="/src/phpWord/export.php">
        <div class="grid-x grid-padding-x">
            <div class="large-7 cell">
                <label><b>Content:</b></label>
                <textarea name="content" placeholder="Insert your text" rows="15"></textarea>
                <p style="position: absolute; bottom: 55px; left: 400px;font-size: 12px;">
                    only plain text allowed in this demo
                </p>
            </div>
            <div class="large-5 cell">
                <label><b>Use this design?</b></label>
                <div class="grid-x grid-padding-x">
                    <div class="large-6 cell">
                        <div>
                            <input type="radio" name="designChoice" value="1" id="designYes">
                            <label for="designYes">Give it to me!</label>
                        </div>
                        <div>
                            <input type="radio" name="designChoice" value="0" id="designNo" checked>
                            <label for="designNo">Nope!</label>
                        </div>
                    </div>
                    <div class="cell large-6">
                        <div class="card" style="width: 200px;">
                            <div class="card-divider">
                                Export Design
                            </div>
                            <img src="/assets/img/generatedDesign_small.png">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <input type="submit" class="button" value="Submit">
    </form>
{% endblock %}